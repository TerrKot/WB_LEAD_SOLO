# Telegram Bot Configuration
# олучить токен можно у @BotFather в Telegram
BOT_TOKEN=your_telegram_bot_token_here

# GPT API Configuration
# олучить API ключ можно на https://platform.openai.com/api-keys
GPT_API_KEY=your_openai_api_key_here
GPT_API_URL=https://api.openai.com/v1/chat/completions
GPT_MODEL=gpt-4o-mini

# Redis Configuration
# ля локальной разработки (внешний порт): redis://localhost:6380/0
# ля Docker (внутри контейнера): redis://redis:6379/0
REDIS_URL=redis://redis:6379/0

# PostgreSQL Configuration (опционально)
# ля локальной разработки: postgresql+asyncpg://app:app@localhost:5432/bd_demo
# ля Docker: postgresql+asyncpg://app:app@bd_demo_postgres:5432/bd_demo
DATABASE_URL=postgresql+asyncpg://app:app@bd_demo_postgres:5432/bd_demo

# Exchange Rates
# урсы валют (можно обновлять через API или вручную)
EXCHANGE_RATE_USD_RUB=100.0
EXCHANGE_RATE_USD_CNY=7.2
EXCHANGE_RATE_EUR_RUB=110.0

# White Logistics Configuration
# азовая цена белой логистики (1000 кг / 4.6 м³)
WHITE_LOGISTICS_BASE_PRICE_USD=1850
# Стоимость документов в рублях
WHITE_LOGISTICS_DOCS_RUB=15000
# Стоимость брокера в рублях
WHITE_LOGISTICS_BROKER_RUB=25000

# Service Configuration
# орт для health endpoint и webhook (внешний порт: 8443, внутри контейнера: 8090)
SERVICE_PORT=8443
# ровень логирования: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO
