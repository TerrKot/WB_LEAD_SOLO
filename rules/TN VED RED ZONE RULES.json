{
  "$schema": "https://example.org/tnved-red-rules.schema.json",
  "meta": {
    "name": "TN VED RED ZONE RULES",
    "version": "1.0.0",
    "language": "ru",
    "purpose": "Автоматическая классификация кодов ТН ВЭД по запрещённым и рискованным категориям",
    "description": "Файл содержит формализованные машинопонятные правила для экспресс-проверки кодов ТН ВЭД. Используется для автоматического BLOCK / RISK / ALLOW решения без анализа текстового описания товара.",
    "usage": [
      "Нормализовать входной код ТН ВЭД до строки из 10 цифр",
      "Проверять правила сверху вниз",
      "Первое совпадение возвращает итоговое решение",
      "Если совпадений нет — ALLOW"
    ]
  },

  "normalization": {
    "rule": "Оставить только цифры, обрезать до 10 символов",
    "example": {
      "input": "33 04 99 000 0",
      "output": "3304990000"
    }
  },

  "decision_priority": ["BLOCK", "RISK", "ALLOW"],

  "rule_engine": {
    "operators": {
      "prefix": "Сравнение первых N цифр кода",
      "range": "Сравнение диапазона по первым N цифрам",
      "exact": "Точное совпадение 10-значного кода"
    }
  },

  "rules": [
    {
      "id": "FOOD_ALL",
      "decision": "BLOCK",
      "conditions": [{ "type": "range", "length": 2, "value": ["01", "24"] }],
      "reason": "Любая пищевая продукция (включая детское, диетическое и спецпитание)",
      "legal_basis": "ТН ВЭД ЕАЭС, главы 01–24"
    },

    {
      "id": "PHARMA_ALL",
      "decision": "BLOCK",
      "conditions": [{ "type": "prefix", "length": 2, "value": "30" }],
      "reason": "Лекарственные и ветеринарные препараты",
      "legal_basis": "Глава 30 ТН ВЭД"
    },

    {
